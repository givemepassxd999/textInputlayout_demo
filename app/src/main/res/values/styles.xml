<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="input_text_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#0000ff</item>
    </style>
    <style name="input_text_hint_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00ff00</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="input_text_error_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffff00</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
